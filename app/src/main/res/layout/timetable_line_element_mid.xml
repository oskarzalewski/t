<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/timetable_mid_element_field"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="6dp"
        android:layout_height="30dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/timetable_black_line">
    </ImageView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/timetable_circle_stop">
        </ImageView>

        <TextView
            android:id="@+id/timetable_mid_element_name"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="AlekandrÃ³w 01"
            android:textAlignment="center"
            android:paddingTop="3dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp">
        </TextView>

        <TextView
            android:id="@+id/timetable_mid_element_time"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="06:00"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="end"
            android:textSize="16sp">

        </TextView>
    </LinearLayout>
</LinearLayout>