<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ticket_oneway_menu_field"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:gravity="center"
    android:orientation="vertical">



        <!-- Content below header and above footer -->


        <Button
            android:id="@+id/jednoliniowy_normalny"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:paddingBottom="5dp"
            android:background="@drawable/app_btn_default"
            android:gravity="center"
            android:text="@string/Bilet_normalny"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/jednoliniowy_ulgowy"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:paddingBottom="5dp"
            android:background="@drawable/app_btn_default"
            android:gravity="center"
            android:text="@string/Bilet_ulgowy"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/normalny_30"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:paddingBottom="5dp"
            android:background="@drawable/app_btn_default"
            android:gravity="center"
            android:text="@string/Bilet_30_normalny"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/ulgowy_30"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:paddingBottom="5dp"
            android:background="@drawable/app_btn_default"
            android:gravity="center"
            android:text="@string/Bilet_30_ulgowy"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/normalny_60"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:paddingBottom="5dp"
            android:background="@drawable/app_btn_default"
            android:gravity="center"
            android:text="@string/Bilet_60_normalny"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/ulgowy_60"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:paddingBottom="5dp"
            android:background="@drawable/app_btn_default"
            android:gravity="center"
            android:text="@string/Bilet_60_ulogwy"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textStyle="bold"/>

</LinearLayout>
